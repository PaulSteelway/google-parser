block content
  .modal.fade#deleteCountryModal(tabindex="-1", role="dialog", aria-labelledby="deleteCountryModalLabel", aria-hidden="true")
    .modal-dialog(role="document")
      .modal-content
        .modal-header
          h5.modal-title#deleteCountryModalLabel Delete country
          button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
        .modal-body
          p Are you sure?
        .modal-footer
          button.btn.btn-secondary(type="button", data-bs-dismiss="modal") Cancel
          a.btn.btn-danger(href="/countries/" type="button", id="deleteButton" ) Delete
