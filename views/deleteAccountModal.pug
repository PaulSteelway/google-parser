block content
  .modal.fade#deleteAccountModal(tabindex="-1", role="dialog", aria-labelledby="deleteAccountModalLabel", aria-hidden="true")
    .modal-dialog(role="document")
      .modal-content
        .modal-header
          h5.modal-title#deleteAccountModalLabel Delete account
          button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
        .modal-body
          p Are you sure?
        .modal-footer
          button.btn.btn-secondary(type="button", data-dismiss="modal") Cancel
          a.btn.btn-danger(href="/" type="button", id="deleteButton" ) Delete
